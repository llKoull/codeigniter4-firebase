{
    "name": "tatter/firebase",
    "type": "library",
    "description": "Firebase integration for CodeIgniter 4",
    "keywords": [
        "codeigniter",
        "codeigniter4",
        "firebase",
        "admin",
        "sdk",
        "google",
        "cloud"
    ],
    "homepage": "https://github.com/tattersoftware/codeigniter4-firebase",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Gatner",
            "email": "mgatner@tattersoftware.com",
            "homepage": "https://tattersoftware.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "google/cloud-firestore": "^1.10",
        "google/protobuf": "^3.3.0",
        "grpc/grpc": "^1.1.0",
        "kreait/firebase-php": "^5.0"
    },
    "require-dev": {
        "codeigniter4/codeigniter4": "dev-develop",
        "tatter/accounts": "^1.0",
        "tatter/tools": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Tatter\\Firebase\\": "src"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/codeigniter4/CodeIgniter4"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyze": "phpstan analyze",
        "inspect": "deptrac analyze --cache-file=build/deptrac.cache",
        "mutate": "infection --threads=2 --skip-initial-tests --coverage=build/phpunit",
        "style": "php-cs-fixer fix --verbose --ansi",
        "test": "phpunit"
    }
}
